/* -*- c -*- */

header
{
##include "los/lmemstream.h"
##include <string.h>
}

#define CHECK_BUF(content) do {                                         \
    gint64 cont_len = strlen(content);                                  \
    gint64 len;                                                         \
    gpointer buf;                                                       \
    buf = l_mem_stream_get_buffer(L_MEM_STREAM(data->stream), &len);    \
    PIF_CHECK(cont_len == len);                                         \
    PIF_CHECK(len == 0 || buf);                                         \
    if (len)                                                            \
      PIF_CHECK(!strncmp(buf, (content), len));                         \
  } while (0)

data
{ 
  LStream *stream;
}

teardown
{
  L_OBJECT_CLEAR(data->stream);
}

unit /* new */
{
  test
    {
      PIF_CHECK((data->stream = l_mem_stream_new("", 0)));
      CHECK_BUF("");
    }

  test
    {
      PIF_CHECK((data->stream = l_mem_stream_new("ABCDEFGH", -1)));
      CHECK_BUF("ABCDEFGH");
    }

  test
    {
      PIF_CHECK((data->stream = l_mem_stream_new("ABCDEFGH", 4)));
      CHECK_BUF("ABCD");
    }
}

unit /* write */
{
  setup
    {
      data->stream = l_mem_stream_new("", 0);
    }

  test
    { 
      PIF_CHECK(data->stream);
      /* [fixme] */
      l_stream_seek(data->stream, 0, L_STREAM_SEEK_SET);
    }

  test /* empty buffer */
    {
      CHECK_BUF("");
    }

  test /* write */
    {
      GError *err = NULL;
      PIF_CHECK(l_stream_write(data->stream, "abcd", 4, &err));
      CHECK_BUF("abcd");
      PIF_CHECK(l_stream_write(data->stream, "efgh", 4, &err));
      CHECK_BUF("abcdefgh");
    }

  test /* write types */
    {
      GError *err = NULL;
      PIF_CHECK(l_stream_write_u8(data->stream, 'A', &err));
      CHECK_BUF("A");
    }
}

unit /* read */
{
  setup
    {
      data->stream = l_mem_stream_new("ABCDEFGH", 8);
    }

  test
    { 
      PIF_CHECK(data->stream);
      CHECK_BUF("ABCDEFGH");
    }

  test /* read */
    {
      gchar buf[6] = { 0, };
      GError *err = NULL;
      PIF_CHECK(l_stream_read(data->stream, buf, 2, &err) == 2);
      PIF_CHECK(!strncmp(buf, "AB", 2));
      PIF_CHECK(l_stream_read(data->stream, buf, 6, &err) == 6);
      PIF_CHECK(!strncmp(buf, "CDEFGH", 6));
    }

  test /* read_u8 */
    {
      GError *err = NULL;
      guint8 val;
      PIF_CHECK(l_stream_read_u8(data->stream, &val, &err) == 1);
      PIF_CHECK(val == 'A');
    }
}
